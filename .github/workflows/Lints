name: Lints

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

env:
  CARGO_TERM_COLOR: always

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: Check fmt
      run: cargo fmt --check
    - name: Run clippy
      run: cargo clippy --all-targets --all-features -- -D warnings
    - name: Check spelling
      uses: crate-ci/typos@v1.0.4
  
